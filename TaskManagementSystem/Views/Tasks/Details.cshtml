@model TaskDetailsDTO

@{
    ViewBag.Title = "Task Details";
    var assignedBy = ViewBag.AssignedByUser;
    var assignedTo = ViewBag.AssignedToUser;
}

<h1 class="my-3">Task Details</h1>

<div class="row justify-content-center">
    <div class="col-mid-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2>@Model.Title</h2>
            </div>
            <div class="card-body">
                <p class="mb-1"><strong>Description:</strong> @Model.Description</p>
                <p class="mb-1"><strong>Start Date:</strong> @Model.StartDate</p>
                <p class="mb-1"><strong>Due Date:</strong> @Model.DueDate</p>
                <p class="mb-1"><strong>Priority:</strong> @Model.Priority</p>
                <p class="mb-1"><strong>Status:</strong> @Model.Status</p>
                <p class="mb-1"><strong>Assigned To:</strong> @assignedTo</p>
                <p class="mb-1"><strong>Assigned By:</strong> @assignedBy</p>
                <h5 class="mt-3 mb-2">Comments:</h5>
                @foreach (var item in Model.Comments)
                {
                    <p class="mb-1"><strong>@item.User.Name (@item.User.UserName):</strong> @item.Text (@item.Date)</p>
                }
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Tasks" asp-action="Index" class="btn btn-primary">Back</a>
                <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
        <div class="card-footer">
            
        </div>
    </div>
</div>