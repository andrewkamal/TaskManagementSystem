@model EditTeamDTO

@{
    ViewBag.Title = "Edit Team";
}

<h1>Edit Team</h1>

<form method="post" class="my-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TeamName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="TeamName" class="form-control" />
            <span asp-validation-for="TeamName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row mb-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Edit Team</button>
            <a asp-action="ListTeams" class="btn btn-danger" style="width:auto">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this Team</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditUsersInTeam" asp-route-teamId="@Model.Id" class="btn btn-primary" style="width:auto">Add or Remove User</a>
        </div>
    </div>
</form>
