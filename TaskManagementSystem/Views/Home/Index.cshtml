@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee 1";
}

<div class="card-group">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.png");

        <div class="card m-3 adjustCards">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="b btn btn-primary m-1">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id" class="b btn btn-primary m-1">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id" class="b btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>