@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All users";
}

<div class="card-group">
    @foreach (var user in Model)
    {
        var photoPath = "~/images/" + (user.PhotoPath ?? "noimage.png");

        <div class="card m-3 adjustCards">
            <div class="card-header">
                <h4>@user.UserName</h4> @* Modify to First & Last Name *@
                <h7>@user.UserName</h7>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@user.Id" class="b btn btn-primary m-1">Tasks</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@user.Id" class="b btn btn-primary m-1">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@user.Id" class="b btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>