@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All users";
}

<div class="card-group">
    @foreach (var user in Model)
    {
        var photoPath = "~/images/" + (user.PhotoPath ?? "noimage.png");

        <div class="card m-3 adjustCards">
            <div class="card-header">
                <h4>@user.Name</h4>
                <h7>@user.UserName</h7>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <form asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a asp-controller="Tasks" asp-action="Index" asp-route-id="@user.Id" class="btn btn-primary m-1">Tasks</a>
                    <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary  m-1">Edit</a>
                    <button type="submit" class="btn btn-danger  m-1" onclick="return confirm('Are you sure you want to delete user: @user.UserName')">Delete</button>
                </form>
            </div>
        </div>
    }
</div>