@model EmployeeCreateDTO

@{
    ViewBag.Title = "Create Employee";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="container mt-3">
    <div class="form-group row my-3">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
          <input asp-for="Name" class="form-control" placeholder="Name" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row my-3">
        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row my-3">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
             <select asp-for = "Department" class = "form-select col-sm-12" asp-items = "Html.GetEnumSelectList<Dept>()">
                 <option value="">Select Department</option>
             </select>      
        </div>
    </div>

    <div class="form-group row my-3">
    <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="form-control" type="file" id="formFile">
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger mt-2"></div>

    <div class="form-group row my-2">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>