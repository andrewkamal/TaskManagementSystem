@model LoginDTO

@{
    ViewBag.Title = "User Login";
}

    <main class="form-signin w-100 m-auto">
        <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Account" asp-action="Login" method="post">
            <img class="mb-4" src="~/images/Task-Management.png" width="72" height="64">
            <h1 class="h3 mb-3 fw-normal">User Login</h1>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="name@example.com" />
                <label asp-for="Email" for="floatingEmail"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password" />
                <label asp-for="Password" for="floatingPassword"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check text-start my-3">
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault" />
            </div>
            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
            <button class="btn btn-primary w-100 py-2" type="submit">Login</button>
            <p class="mt-5 mb-3 text-body-secondary">© 2024 Andrew Kamal</p>
        </form>
    </main>